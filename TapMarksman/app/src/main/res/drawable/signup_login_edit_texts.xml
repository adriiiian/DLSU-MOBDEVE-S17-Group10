<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item>
                <shape>
                    <corners
                        android:radius="8dp"/>
                    <size
                        android:width="0dp"
                        android:height="40dp"/>
                    <gradient
                        android:angle="270"
                        android:endColor="@color/darkgreybtns"
                        android:startColor="@color/darkgreybtns"/>
                </shape>
            </item>
            <item
                android:bottom="5dp">
                <shape>
                    <corners
                        android:radius="8dp"/>
                    <stroke
                        android:width="1dp"
                        android:color="@color/darkbluebtns"/>
                    <solid
                        android:color="@color/darkbluebtns"/>
                    <size
                        android:width="0dp"
                        android:height="40dp"/>
                </shape>
            </item>
        </layer-list>
    </item>

</selector>