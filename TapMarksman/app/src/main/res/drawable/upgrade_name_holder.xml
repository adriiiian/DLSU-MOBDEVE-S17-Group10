<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_enabled="true">
        <layer-list>
            <item
                android:left="5dp"
                android:top="5dp">
                <shape>
                    <corners
                        android:radius="8dp"/>
                    <size
                        android:width="0dp"
                        android:height="50dp"/>
                    <gradient
                        android:angle="270"
                        android:endColor="@color/black"
                        android:startColor="@color/black"/>
                </shape>
            </item>
            <item
                android:bottom="5dp"
                android:right="5dp">
                <shape>
                    <solid
                        android:color="@color/lightgrey"/>
                    <corners
                        android:radius="8dp" />
                    <size
                        android:width="0dp"
                        android:height="50dp"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>