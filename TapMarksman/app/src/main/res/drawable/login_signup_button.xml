<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_pressed="true">
        <layer-list>
            <item
                android:left="5dp"
                android:top="5dp">
                <shape>
                    <corners
                        android:radius="8dp"/>
                    <size
                        android:width="275dp"
                        android:height="50dp"/>
                    <gradient
                        android:angle="270"
                        android:endColor="@color/darkgreybtns"
                        android:startColor="@color/darkgreybtns"/>
                </shape>
            </item>
            <item
                android:bottom="4dp"
                android:right="4dp">
                <shape>
                    <corners
                        android:radius="8dp"/>
                    <solid
                        android:color="@color/darkgreenbtns"/>
                    <size
                        android:width="275dp"
                        android:height="50dp"/>
                </shape>
            </item>
        </layer-list>
    </item>
    <item
        android:state_enabled="true">
        <layer-list>
            <item>
                <shape>
                    <corners
                        android:radius="15dp"/>
                    <size
                        android:width="330dp"
                        android:height="50dp"/>
                    <gradient
                        android:angle="270"
                        android:endColor="@color/darkgreybtns"
                        android:startColor="@color/darkgreybtns"/>
                </shape>
            </item>
            <item
                android:bottom="5dp">
                <shape>
                    <corners
                        android:radius="15dp"/>
                    <solid
                        android:color="@color/lightgreen"/>
                    <size
                        android:width="330dp"
                        android:height="50dp"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>