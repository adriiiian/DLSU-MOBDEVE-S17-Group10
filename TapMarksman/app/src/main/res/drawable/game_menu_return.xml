<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape xmlns:android="http://schemas.android.com/apk/res/android"
                    android:shape="rectangle">
                    <gradient
                        android:angle="270"
                        android:endColor="@color/black"
                        android:startColor="@color/black"/>
                    <size
                        android:height="16dp"
                        android:width="16dp"
                        />
                </shape>
            </item>
            <item
                android:right="2dp">
                <shape xmlns:android="http://schemas.android.com/apk/res/android"
                    android:shape="rectangle">
                    <gradient
                        android:angle="270"
                        android:endColor="@color/black"
                        android:startColor="@color/darkbluebtns"/>
                    <size
                        android:height="16dp"
                        android:width="16dp"
                        />
                </shape>
            </item>
        </layer-list>
    </item>

    <item android:state_enabled="true">
        <layer-list>
            <item>
                <shape xmlns:android="http://schemas.android.com/apk/res/android"
                    android:shape="rectangle">
                    <gradient
                        android:angle="270"
                        android:endColor="@color/black"
                        android:startColor="@color/black"/>
                    <size
                        android:height="16dp"
                        android:width="16dp"
                        />
                </shape>
            </item>
            <item
                android:right="2dp">
                <shape xmlns:android="http://schemas.android.com/apk/res/android"
                    android:shape="rectangle">
                    <gradient
                        android:angle="270"
                        android:endColor="@color/darkblue"
                        android:startColor="@color/darkblue"/>
                    <size
                        android:height="16dp"
                        android:width="16dp"
                        />
                </shape>
            </item>
        </layer-list>
    </item>



</selector>